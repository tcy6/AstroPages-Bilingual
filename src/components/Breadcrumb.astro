---
import { useTranslations, getLangPrefix, type Lang } from "@/i18n/ui";

type Props = {
  lang?: Lang;
};

const { lang = "en" } = Astro.props;
const t = useTranslations(lang);
const langPrefix = getLangPrefix(lang);

// Remove current url path and remove trailing slash if exists
const currentUrlPath = Astro.url.pathname.replace(/\/+$/, "");

// Get url array from path
// eg: /tags/tailwindcss => ['tags', 'tailwindcss']
const breadcrumbList = currentUrlPath.split("/").slice(1);

// Remove language prefix from breadcrumb display (only "en" now since "zh" uses root)
if (breadcrumbList[0] === "en") {
  breadcrumbList.shift();
}

// Translate breadcrumb items
const translateBreadcrumb = (item: string): string => {
  const translations: Record<string, string> = {
    posts: t("nav.posts"),
    tags: t("nav.tags"),
    about: t("nav.about"),
    archives: t("nav.archives"),
    search: t("nav.search"),
  };
  return translations[item.toLowerCase()] || item;
};

// if breadcrumb is Home > Posts > 1 <etc>
// replace Posts with Posts (page number)
if (breadcrumbList[0] === "posts" && breadcrumbList.length > 1 && !isNaN(Number(breadcrumbList[1]))) {
  const pageNum = breadcrumbList[1] || 1;
  const pageText = t("page.pageNum").replace("{num}", String(pageNum));
  breadcrumbList.splice(0, 2, `${t("nav.posts")} (${pageText})`);
} else if (breadcrumbList[0] === "posts") {
  breadcrumbList[0] = t("nav.posts");
}

// if breadcrumb is Home > Tags > [tag] > [page] <etc>
// replace [tag] > [page] with [tag] (page number)
if (breadcrumbList[0] === "tags" || breadcrumbList[0] === t("nav.tags")) {
  breadcrumbList[0] = t("nav.tags");
  if (!isNaN(Number(breadcrumbList[2]))) {
    const pageNum = breadcrumbList[2];
    const pageText = t("page.pageNum").replace("{num}", String(pageNum));
    breadcrumbList.splice(
      1,
      3,
      `${breadcrumbList[1]} ${Number(pageNum) === 1 ? "" : "(" + pageText + ")"}`
    );
  }
}

// Translate single-word items
if (breadcrumbList.length === 1) {
  breadcrumbList[0] = translateBreadcrumb(breadcrumbList[0]);
}
---

<nav class="app-layout mt-8 mb-1" aria-label="breadcrumb">
  <ul
    class="font-light [&>li]:inline [&>li:not(:last-child)>a]:hover:opacity-100"
  >
    <li>
      <a href={`${langPrefix}/`} class="opacity-80">{t("nav.home")}</a>
      <span aria-hidden="true" class="opacity-80">&raquo;</span>
    </li>
    {
      breadcrumbList.map((breadcrumb, index) =>
        index + 1 === breadcrumbList.length ? (
          <li>
            <span
              class:list={["capitalize opacity-75", { lowercase: index > 0 }]}
              aria-current="page"
            >
              {/* make the last part lowercase in Home > Tags > some-tag */}
              {decodeURIComponent(breadcrumb)}
            </span>
          </li>
        ) : (
          <li>
            <a href={`${langPrefix}/${breadcrumb.toLowerCase()}/`} class="capitalize opacity-70">
              {translateBreadcrumb(breadcrumb)}
            </a>
            <span aria-hidden="true">&raquo;</span>
          </li>
        )
      )
    }
  </ul>
</nav>

