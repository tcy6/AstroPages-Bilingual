---
import IconHash from "@/assets/icons/IconHash.svg";
import { getLangPrefix, type Lang } from "@/i18n/ui";

type Props = {
  tag: string;
  tagName: string;
  size?: "sm" | "lg";
  lang: Lang;
};

const { tag, tagName, size = "lg", lang } = Astro.props;
const langPrefix = getLangPrefix(lang);
---

<li>
  <a
    href={`${langPrefix}/tags/${tag}/`}
    transition:name={tag}
    class:list={[
      "flex items-center gap-0.5",
      "border-b-2 border-dashed border-foreground",
      "hover:-mt-0.5 hover:border-accent hover:text-accent",
      "focus-visible:border-none focus-visible:text-accent",
      { "text-sm": size === "sm" },
      { "text-lg": size === "lg" },
    ]}
  >
    <IconHash
      class:list={[
        "opacity-80",
        { "size-5": size === "lg" },
        { "size-4": size === "sm" },
      ]}
    />
    {tagName}
  </a>
</li>
